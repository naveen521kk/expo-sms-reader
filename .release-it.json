{
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "git": {
        "tagName": "v${version}",
        "commitMessage": "chore: release ${version}",
        "requireCleanWorkingDir": true,
        "requireBranch": "main"
    },
    "npm": {
        "publish": true
    },
    "github": {
        "release": true
    }
}